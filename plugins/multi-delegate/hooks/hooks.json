{
  "description": "Verify delegated outputs after Bash tool execution",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/post-delegate-verify.mjs",
            "timeout": 90
          }
        ]
      }
    ]
  }
}
